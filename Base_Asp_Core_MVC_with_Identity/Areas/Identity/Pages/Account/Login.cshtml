@page
@model LoginModel
@{
    ViewData["Title"] = "Đăng nhập - Yazaki";
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css?family=Poppins:400,500,600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">

    <style>
        :root {
            --bg-overlay: rgba(0, 0, 0, .45);
            --card-bg: #fff;
            --primary: #007bff;
            --radius-lg: 20px;
        }

        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            font-family: 'Poppins', sans-serif;
            min-height: 100vh;
        }

        /* nền full màn hình */
        .auth-page {
            position: relative;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
            overflow: hidden;
        }

        .auth-page::before {
            content: "";
            position: fixed;
            inset: 0;
            background: url('@Url.Content("~/image/LoginImage.png")') center center/cover no-repeat;
            filter: blur(2px);
            transform: scale(1.05);
            z-index: -2;
        }

        /* lớp tối để form nổi hơn */
        .auth-page::after {
            content: "";
            position: fixed;
            inset: 0;
            background: var(--bg-overlay);
            z-index: -1;
        }

        /* hộp login */
        .login-card {
            width: min(420px, 100%);
            background: var(--card-bg);
            border-radius: 18px;
            box-shadow: 0 20px 50px rgba(0, 0, 0, .25);
            padding: 35px 35px 30px;
            text-align: left;
        }

        .login-card h2 {
            margin: 0 0 12px;
            font-size: 26px;
            text-align: center;
            color: #222;
            font-weight: 600;
        }

        .login-subtitle {
            text-align: center;
            margin-bottom: 25px;
            color: #666;
            font-size: 14px;
        }

        .form-group {
            margin-bottom: 18px;
        }

        .input-wrap {
            position: relative;
        }

        .input-wrap i {
            position: absolute;
            top: 50%;
            left: 12px;
            transform: translateY(-50%);
            color: #999;
            pointer-events: none;
        }

        .input-wrap input {
            width: 100%;
            border: 1px solid #d9d9d9;
            border-radius: 10px;
            padding: 11px 12px 11px 38px;
            outline: none;
            font-size: 14px;
            transition: .15s ease;
            background: #fff;
        }

        .input-wrap input:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(0,123,255,.12);
        }

        label {
            font-size: 13px;
            display: block;
            margin-bottom: 6px;
            color: #333;
        }

        .text-danger {
            font-size: 12px;
            margin-top: 5px;
        }

        .btn-login {
            width: 100%;
            border: none;
            background: linear-gradient(90deg, #007bff 0%, #4f9cff 100%);
            color: #fff;
            padding: 12px 0;
            border-radius: 999px;
            font-weight: 600;
            cursor: pointer;
            transition: .15s ease;
            font-size: 15px;
            margin-top: 5px;
        }

        .btn-login:hover {
            filter: brightness(.95);
        }

        .footer-links {
            margin-top: 18px;
            text-align: center;
            font-size: 13px;
            color: #888;
        }

        .footer-links a {
            color: var(--primary);
            text-decoration: none;
        }

    </style>

</head>
<body>
    <div class="auth-page">
        <div class="login-card">
            <h2>Đăng nhập</h2>
            <p class="login-subtitle">Đăng nhập để vào hệ thống quản lý</p>

            <form id="account" method="post">
                <div class="form-group">
                    <label for="email">Tài khoản (Email)</label>
                    <div class="input-wrap">
                        <i class="fas fa-user"></i>
                        <input id="email" asp-for="Input.Email" autocomplete="username" aria-required="true" />
                    </div>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="password">Mật khẩu</label>
                    <div class="input-wrap">
                        <i class="fas fa-lock"></i>
                        <input id="password" asp-for="Input.Password" type="password" autocomplete="current-password" aria-required="true" />
                    </div>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                    @if (!string.IsNullOrEmpty(ViewData["LoginErrorMessage"] as string))
                    {
                        <div class="text-danger">@ViewData["LoginErrorMessage"]</div>
                    }
                </div>

                <button id="login-submit" type="submit" class="btn-login">Đăng nhập</button>
            </form>

            <div class="footer-links">
                © @DateTime.Now.Year Yazaki — <a href="/">Về trang chủ</a>
            </div>
        </div>
    </div>
</body>
</html>
