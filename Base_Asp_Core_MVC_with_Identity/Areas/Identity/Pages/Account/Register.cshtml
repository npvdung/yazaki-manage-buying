@page
@model RegisterModel
@{
    ViewData["Title"] = "Đăng ký tài khoản";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css?family=Poppins:600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

    <style>
        body, html {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: 'Poppins', sans-serif;
            background-color: #f8f9fa; /* Màu nền sáng */
        }

        .register-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
        }

        .register-box {
            width: 100%;
            max-width: 600px; /* Chiều rộng tối đa của khung đăng ký */
            height: auto; /* Tự động điều chỉnh chiều cao */
            padding: 40px;
            background: #ffffff; /* Nền trắng cho khung đăng ký */
            border-radius: 10px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1); /* Bóng nhẹ cho khung */
            border: 2px solid #007bff; /* Đường viền màu xanh nước biển */
        }

        h2 {
            margin-bottom: 30px;
            font-size: 28px;
            color: #007bff; /* Màu xanh nước biển cho tiêu đề */
            text-align: center; /* Căn giữa tiêu đề */
        }

        .form-row {
            display: flex;
            justify-content: space-between; /* Chia đều không gian giữa các cột */
        }

        .form-column {
            width: 48%; /* Chiếm 48% chiều rộng mỗi cột */
        }

        .form-floating {
            margin-bottom: 20px; /* Khoảng cách giữa các trường nhập liệu */
            position: relative; /* Để vị trí của label có thể được đặt chính xác */
        }

            .form-floating input {
                width: 100%;
                padding: 10px;
                outline: none;
                border: 1px solid #007bff; /* Đường viền màu xanh nước biển */
                border-radius: 5px; /* Bo tròn góc cho trường nhập liệu */
                transition: border-color 0.3s; /* Hiệu ứng chuyển màu cho đường viền */
            }

            .form-floating label {
                position: absolute;
                top: 10px; /* Đặt label lên trên ô nhập liệu */
                left: 10px;
                color: #007bff; /* Màu xanh nước biển cho label */
                pointer-events: none; /* Label không thể tương tác */
                transition: all 0.3s ease; /* Hiệu ứng chuyển động cho label */
            }

            .form-floating input:focus {
                border-color: #0056b3; /* Đường viền tối hơn khi focus */
            }

                .form-floating input:focus + label,
                .form-floating input:not(:placeholder-shown) + label {
                    top: -15px; /* Nâng label lên khi ô nhập liệu được focus hoặc có giá trị */
                    font-size: 12px; /* Giảm kích thước chữ khi nâng lên */
                    color: #0056b3; /* Màu tối hơn cho label khi focus hoặc đã nhập */
                }

        .btn-register {
            width: 100%;
            padding: 15px;
            border: none;
            outline: none;
            background: #007bff; /* Màu xanh nước biển cho nút */
            color: #fff; /* Chữ trắng cho nút */
            font-size: 18px;
            cursor: pointer;
            border-radius: 5px;
            transition: background 0.3s ease; /* Hiệu ứng chuyển màu cho nút */
        }

            .btn-register:hover {
                background: #0056b3; /* Màu xanh tối hơn khi hover */
            }

        .login-link {
            margin-top: 20px;
            text-align: center; /* Căn giữa liên kết đăng nhập */
        }

            .login-link a {
                color: #007bff; /* Màu xanh nước biển cho liên kết */
                text-decoration: none; /* Không có gạch chân */
                transition: color 0.3s ease; /* Hiệu ứng chuyển màu cho liên kết */
            }

                .login-link a:hover {
                    color: #0056b3; /* Màu tối hơn khi hover */
                }

        .text-danger {
            color: #dc3545; /* Màu đỏ cho thông báo lỗi */
            font-size: 12px;
        }

    </style>
</head>
<body>
    <div class="register-container">
        <div class="register-box">
            <h2>Đăng ký tài khoản mới</h2>
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" novalidate>
                <div class="form-row">
                    <div class="form-column">
                        <div class="form-floating">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder=" ">
                            <label>Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-floating">
                            <input asp-for="Input.FirstName" class="form-control" placeholder=" ">
                            <label>Họ</label>
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-floating">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder=" ">
                            <label>Mật khẩu</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-column">
                        <div class="form-floating">
                            <input asp-for="Input.LastName" class="form-control" placeholder=" ">
                            <label>Tên</label>
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>
                        <div class="form-floating">
                            <input asp-for="Input.PhoneNumber" class="form-control" placeholder=" ">
                            <label>Số điện thoại</label>
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="form-floating">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder=" ">
                            <label>Nhập lại mật khẩu</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <button id="registerSubmit" type="submit" class="btn-register">Đăng ký</button>
                <div class="login-link">
                    <a asp-page="./Login">Đã có tài khoản? Đăng nhập</a>
                </div>
            </form>
        </div>
    </div>


</body>
</html>
