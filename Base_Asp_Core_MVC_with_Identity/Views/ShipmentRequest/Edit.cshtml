    // Gắn sự kiện khi thêm detail
    $('.dynamic-dropdown').change(function () {
        const vendorId = $(this).val(); // Lấy ID Vendor
        const targetDropdown = $('#product-template'); // Dropdown sản phẩm ẩn

        if (vendorId) {
            $.ajax({
                url: '@Url.Action("GetDataForDropdown", "ShipmentRequest")',
                type: 'GET',
                data: { id: vendorId, type: 'Manufacturer' },
                success: function (response) {
                    // Cập nhật nội dung template
                    targetDropdown.empty();
                    $.each(response, function (index, item) {
                        debugger;
                        $('#TotalAmount').val(response.totalAmount);
                        $('#TotalDiscoutAmount').val(response.totalDiscoutAmount);
                        $('#TotalAmountIncludeTax').val(response.totalAmountIncludeTax);
                        $('#TotalAmountIncludeTaxAndDiscount').val(response.totalAmountIncludeTaxAndDiscount);
                    });
                    // Reset tất cả các dropdown sản phẩm trong chi tiết
                },
                error: function () {
                    alert('Error fetching products!');
                }
            });
        } else {
            targetDropdown.empty();
            // Reset tất cả các dropdown sản phẩm trong chi tiết
