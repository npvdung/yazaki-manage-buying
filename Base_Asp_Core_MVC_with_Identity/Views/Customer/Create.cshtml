@model Customer
<style>
    body {
        background-color: #f7f7f7;
        font-family: Arial, sans-serif;
    }

    .container-a {
        margin-top: 50px;
        background-color: #fff;
        padding: 30px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0,0,0,0.3);
    }

    .form-group label {
        font-weight: bold;
    }

    .form-control:focus {
        box-shadow: none;
        border-color: #007bff;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0069d9;
            border-color: #0062cc;
        }
</style>

<div class="container-a">
    <div class="row pb-2">
        <h2>Thêm mới khách hàng</h2>
    </div>

    <form method="post">
        @*<div asp-validation-summary="All"></div>*@
        <div class="row">
            <div class="form-group col-md-6">
                @Html.LabelFor(model => model.CustomerCode, htmlAttributes: new { @class = "control-label col-md-4" })
                <input type="text" class="form-control mb-3 col-md-8" asp-for="CustomerCode" readonly="true">
                <span asp-validation-for="CustomerCode" class="alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                @Html.LabelFor(model => model.FullName, htmlAttributes: new { @class = "control-label col-md-4" })
                <input type="text" class="form-control mb-3 col-md-8" asp-for="FullName" placeholder="Nhập tên khách hàng">
                <span asp-validation-for="FullName" class="alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                @Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "control-label col-md-4" })
                <input type="text" class="form-control mb-3 col-md-8" asp-for="PhoneNumber" placeholder="Nhập tên danh mục">
                <span asp-validation-for="PhoneNumber" class="alert-danger"></span>
            </div>
             <div class="form-group col-md-6">
                @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-md-4" })
                <input type="text" class="form-control mb-3 col-md-8" asp-for="Address" placeholder="Nhập địa chỉ">
                <span asp-validation-for="Address" class="alert-danger"></span>
            </div>
             <div class="form-group col-md-6">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-4" })
                <input type="text" class="form-control mb-3 col-md-8" asp-for="Email" placeholder="Nhập Email">
                <span asp-validation-for="Email" class="alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                @Html.LabelFor(model => model.Desciption, htmlAttributes: new { @class = "control-label col-md-4" })
                <input type="text" class="form-control mb-3 col-md-8" asp-for="Desciption" placeholder="Nhập mô tả">
            </div>
        </div>
        <div class="text-center">
            <button type="submit" class="btn btn-lg btn-outline-primary px-4 py-2 mx-2"><i class="bi bi-save"></i> Tạo mới </button>
            <a asp-controller="Customer" asp-action="Index" class="btn btn-lg btn-outline-warning px-4 py-2">Trở về</a>
        </div>
    </form>

</div>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
